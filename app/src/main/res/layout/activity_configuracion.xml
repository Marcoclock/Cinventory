<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="marcorafael.prueba1.activityConfiguracion">

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="borrar"
        android:id="@+id/bac_borrarBD"
        android:background="@drawable/btn_circle_logo"
        android:textColor="#ffffff"
        android:layout_below="@+id/cbac_zonas"
        android:layout_alignLeft="@+id/bac_agregarCategoria"
        android:layout_alignStart="@+id/bac_agregarCategoria" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione una opcion:"
        android:id="@+id/twc_seleccione"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="18dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="Agregar"
        android:id="@+id/bac_agregarCategoria"
        android:background="@drawable/btn_circle_logo"
        android:textColor="#ffffff"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todos los Articulos"
        android:id="@+id/cbac_todosLosArticulos"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorias"
        android:id="@+id/cbac_categorias"
        android:layout_below="@+id/cbac_todosLosArticulos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zonas"
        android:id="@+id/cbac_zonas"
        android:layout_below="@+id/cbac_categorias"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrar Bases de Datos:"
        android:id="@+id/textView2"
        android:textColor="#010000"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/twc_seleccione"
        android:layout_alignEnd="@+id/twc_seleccione" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etac_categorias"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/twc_seleccione"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/etac_categorias"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
